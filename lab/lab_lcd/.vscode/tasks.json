{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "OpenOCD flash",
      "command": "openocd",
      "type": "shell",
      "args": [
        "-f",
        "interface\\stlink.cfg",
        "-f",
        "target\\stm32f1xx.cfg",
        "-c",
        "init",
        "-c",
        "halt",
        "-c",
        "\"flash write_image erase ${workspaceFolder:lab_lcd}/build/RelWithDebInfo/lab_lcd.elf 0x08000000\"",
        "-c",
        "verify",
        "-c",
        "reset",
        "-c",
        "exit"
      ],
      "presentation": {
        "reveal": "always"
      },
      "group": "build"
    }
  ]
}