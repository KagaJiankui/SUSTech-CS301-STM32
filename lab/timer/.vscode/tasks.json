{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "OpenOCD flash",
      "command": "openocd",
      "type": "shell",
      "args": [
        "-f",
        "${workspaceFolder:stm32}/.vscode/stlink.cfg",
        "-c",
        "program ./build/Debug/timer.elf",
        "-c",
        "reset run; exit;"
      ],
      "presentation": {
        "reveal": "always"
      },
      "group": "build"
    },
    {
      "label": "OpenOCD Process Create (CMSIS-DAP)",
      "command": "openocd",
      "type": "shell",
      "args": [
        "-f",
        "${workspaceFolder:stm32}/.vscode/cmsis-dap.cfg",
        "-s",
        "${workspaceFolder:TIMER}",
        "-c",
        "gdb port 50000",
        "-c",
        "tcl port 50001",
        "-c",
        "telnet_port 50002"
      ],
      "presentation": {
        "reveal": "revealProblems"
      },
      "group": "none",
      "isBackground": true,
      "background": {
        "activeOnStart": true,
        "beginsPattern": "^adapter\\sspeed:\\s\\d+\\s\\w+$",
        "endsPattern": "^.*Listening\\s.*\\sport\\s\\d+\\s.*$"
      }
    },
    {
      "label": "PyOCD flash",
      "command": "pyocd",
      "type": "shell",
      "args": [
        "flash",
        "-t",
        "stm32f103rc",
        "${workspaceFolder:TIMER}/build/Debug/timer.elf"
      ],
      "presentation": {
        "reveal": "always"
      },
      "group": "build"
    },
    {
      "label": "objcopy to hex",
      "command": "arm-none-eabi-objcopy",
      "type": "shell",
      "args": [
        "-O",
        "ihex",
        "${workspaceFolder:TIMER}/build/Debug/timer.elf",
        "${workspaceFolder:TIMER}/build/Debug/timer.hex"
      ],
      "group": "build"
    }
  ]
}