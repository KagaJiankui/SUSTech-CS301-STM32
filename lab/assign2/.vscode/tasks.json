{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "OpenOCD flash",
      "command": "openocd",
      "type": "shell",
      "args": [
        "-f",
        "${workspaceFolder:stm32}/.vscode/cmsis-dap.cfg",
        "-f",
        "target/stm32f1x.cfg",
        "-c",
        "\"program",
        "${workspaceFolder:TIMER}/build/RelWithDebInfo/assign2.elf",
        "0x80000000",
        "verify",
        "reset",
        "exit\""
      ],
      "presentation": {
        "reveal": "always"
      },
      "group": "build"
    },
    {
      "label": "objcopy to hex",
      "command": "arm-none-eabi-objcopy",
      "type": "shell",
      "args": [
        "-O",
        "ihex",
        "${workspaceFolder:USART}/build/Debug/lab_usart.elf",
        "${workspaceFolder:USART}/build/Debug/lab_usart.hex"
      ],
      "group": "build"
    }
  ]
}